// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleTypes {
  ONLY_READ
  SELLER
  MANAGER
  OWNER
}

model Roles {
  id          String   @id @unique @default(uuid())
  name        String   @unique
  description String
  createdAt   DateTime @default(now())
}

model Users {
  id        String   @id @unique @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
